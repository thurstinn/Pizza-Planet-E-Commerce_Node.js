<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>View Orders</title>
  <link rel="stylesheet" href="/css/styles.css">
  <style>
    h1 {
      padding-left: 40px;
    }
  </style>
</head>
<body>
  <header>
    <nav>
      <ul>
        <li><a href="/admin/update-menu">Update Menu</a></li>
        <li><a href="/logout">Logout</a></li>
      </ul>
    </nav>
  </header>
  <main class="content">
    <div class="text-container">
    <h1>All Orders</h1>
    <% if (orders.length === 0) { %>
      <p>No orders found.</p>
    <% } else { %>
      <ul>
        <% orders.forEach(order => { %>
          <li class="order-item">
            <strong>Order ID:</strong> <%= order._id %> <br>
            <strong>Total:</strong> $<%= order.total.toFixed(2) %> <br>
            <strong>Payment Status:</strong> <%= order.paymentStatus %> <br>
            <strong>Time Ordered:</strong> <%= new Date(order.createdAt).toLocaleString() %> <br>
            <strong>Items:</strong>
            <ul>
              <% order.items.forEach(item => { %>
                <li><%= item.name %> - $<%= item.price.toFixed(2) %> x <%= item.quantity %> = $<%= (item.price * item.quantity).toFixed(2) %></li>
              <% }); %>
            </ul>
          </li>
        <% }); %>
      </ul>
    <% } %>
  </main>
</body>
</html>
